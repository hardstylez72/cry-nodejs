{
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.d.ts"
  ],
  "compilerOptions": {
    "checkJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "declaration": false,
    "experimentalDecorators": true,
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node16",
    "allowJs": true,
    "esModuleInterop": true
  },
}
